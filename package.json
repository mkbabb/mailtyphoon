{
    "name": "mailtyphoon",
    "version": "3.4.0",
    "description": "Compile tailwindcss (or any CSS-like file) into a compatible mail-viewer format.",
    "license": "MIT",
    "homepage": "https://github.com/mkbabb/mailtyphoon",
    "type": "module",
    "author": "Mike Babb",
    "bin": {
        "mailtyphoon": "./dist/mailtyphoon.cjs"
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/mailtyphoon.d.ts"
            ]
        }
    },
    "types": "./dist/mailtyphoon.d.ts",
    "scripts": {
        "build": "vite build && chmod a+x ./dist/mailtyphoon.cjs",
        "test": "vitest"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "juice": "10.0.0",
        "lru-cache": "^10.1.0",
        "rehype": "^13.0.1",
        "rehype-rewrite": "^4.0.2",
        "rehype-stringify": "^10.0.0",
        "yargs": "17.7.2"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/yargs": "^17.0.32",
        "autoprefixer": "^10.4.16",
        "typescript": "^5.3.3",
        "vite": "^5.0.11",
        "vite-plugin-commonjs": "^0.10.1",
        "vite-plugin-dts": "^3.7.0",
        "vite-plugin-node-polyfills": "^0.19.0",
        "vite-plugin-shebang": "^0.1.6",
        "vitest": "^1.1.3"
    },
    "peerDependencies": {
        "sass": "^1.69.5",
        "tailwindcss": "3.x"
    }
}
