{
    "name": "mailtyphoon",
    "version": "3.2.0",
    "description": "Transform tailwindcss (or any CSS-like file) into a compatible mail-viewer format",
    "license": "MIT",
    "homepage": "https://github.com/mkbabb/mailtyphoon",
    "type": "module",
    "author": "Mike Babb",
    "bin": {
        "mailtyphoon": "./dist/mailtyphoon.cjs"
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/mailtyphoon.d.ts"
            ]
        }
    },
    "scripts": {
        "build": "vite build",
        "test": "vitest",
        "tmp": "vite build && chmod a+x ./dist/mailtyphoon.cjs"
    },
    "dependencies": {
        "juice": "9.1.0",
        "rehype": "^13.0.1",
        "rehype-rewrite": "^4.0.0",
        "rehype-stringify": "^10.0.0",
        "yargs": "17.7.2"
    },
    "devDependencies": {
        "@types/node": "^20.9.0",
        "@types/yargs": "^17.0.31",
        "autoprefixer": "^10.4.16",
        "typescript": "^5.2.2",
        "vite": "^4.5.0",
        "vite-plugin-commonjs": "^0.10.0",
        "vite-plugin-dts": "^3.6.3",
        "vite-plugin-node-polyfills": "^0.16.0",
        "vitest": "^0.34.6"
    },
    "peerDependencies": {
        "sass": "^1.69.5",
        "tailwindcss": "3.x"
    }
}
